{
  "name": "eclipse-ghost-theme",
  "version": "0.1.0",
  "description": "Eclipse ghost theme",
  "engines": {
    "ghost": "^1.0.0"
  },
  "main": "index.js",
  "scripts": {
    "compile:scss": "node-sass --source-map true assets/scss -o assets/css",
    "compile:autoprefixer": "postcss assets/css/*.css --use autoprefixer -d assets/css",

    "build": "npm run compile:scss && npm run compile:autoprefixer",
    "watch": "npm run build && chokidar 'assets/scss/**/*.scss' -c 'npm run build'",

    "start": "npm run watch"
  },
  "author": {
    "name": "queued37",
    "email": "queued37@gmail.com"
  },
  "license": "ISC",
  "config": {
    "posts_per_page": 10
  },
  "devDependencies": {
    "autoprefixer": "^8.5.0",
    "chokidar-cli": "^1.2.0",
    "node-sass": "^4.9.0",
    "postcss-cli": "^5.0.0"
  }
}
