{{!< default}}

<section class="content-box" role="main">
{{#post}}
<article role="article" itemscope itemtype="http://schema.org/Article">

<header class="post-header">
{{#if feature_image}}
  <div class="feature-image" style="background-image: url({{feature_image}})">
    <h1 itemprop="headline">{{title}}</h1>
    <time datetime="{{date format="YYYY-MM-DD"}}" itemprop="datePublished">{{date format='YYYY.MM.DD'}}</time>
  </div>
{{else}}
  <h1 itemprop="headline">{{title}}</h1>
  <time datetime="{{date format="YYYY-MM-DD"}}" itemprop="datePublished">{{date format='YYYY.MM.DD'}}</time>
{{/if}}
</header>

<section class="post-body">
  {{content}}
</section>

<hr>
<footer>

<div class="post-tags-share" style="display:flex;">

<div class="post-tags">
{{#if tags}}
<li class="inline-list">
{{#foreach tags}}
<ul><a class="btn tag" href="{{url}}">{{name}}</a></ul><!--
-->{{/foreach}}
</li>
{{/if}}
</div>

<div class="post-share">
<li class="inline-list">
  <ul><a class="btn social" target="_blank" href="http://twitter.com/share?text={{title}}&amp;url={{url absolute="true"}}"><i class="fab fa-twitter"></i></a></ul><!--
  --><ul><a class="btn social" id="facebook-share"><i class="fab fa-facebook"></i></a></ul><!--
  --><ul><a class="btn social" target="_blank" href="https://plus.google.com/share?url={{url absolute="true"}}"><i class="fab fa-google-plus"></i></a></ul>
</li>
</div>

<!-- Facebook share -->
<script>
document.getElementById('facebook-share').onclick = function() {
  FB.ui({
    method: 'share',
    display: 'popup',
    href: '{{url absolute="true"}}',
  }, function(response){});
}
</script>

</div>

<!--
{{#if author}}
<address class="post-author-info" itemscope itemtype="http://schema.org/Person">
  {{#if author.profile_image}}<img class="post-author-image" src="{{author.profile_image}}" itemprop="image" alt="{{author.name}}" />{{/if}}
  <div class="post-author-text">
    <div class="post-author-name">{{author.name}}</div>
    {{#if author.website}}<div class="post-author-website">Website: <a href="{{author.website}}" itemprop="url">{{author.website}}</a></div>{{/if}}
    {{#if author.bio}}<div class="post-author-bio">{{author.bio}}</div>{{/if}}
  </div>
</address>
{{/if}}
-->

</footer>
</article>
{{/post}}
{{#if pagination}}{{{pagination}}}{{/if}}

{{> footer}}
</section>
